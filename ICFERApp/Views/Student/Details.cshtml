@model Student

<a asp-route-id="@Model.Id" asp-action="ReportDetails" asp-controller="Reports" 
    class="btn btn-primary">Print Report</a>

<br/>
<br/>

<style>
    .centerTable { margin: 0px auto; }
</style>

@* Styling Student's Report. *@

<h2 class="text-center" style="color: rgb(21, 121, 31)">Student Details</h2>

    <table cellpadding="0" cellspacing="0" class="centerTable">
              
        <tr>
            <td>
                <div class="pv-lg"><img class="center-block img-responsive img-circle img-thumbnail thumb96" height="300" width="180" src="/images/@Model.ImageUrl" alt="Contact"></div>

            </td>
            <td> <h5>Registration Number :</h5>  <i> <h5 style="color: rgb(21, 121, 31)">@Model.StudentRegNo</h5> </i></td>
        </tr>
        <tr>
            <td>
                <br/>
                <br/>
            </td>
        </tr>
        <tr>
            <td>
                <img height="80" width="150" src="data:image/png;base64,  @ViewBag.BarCode" alt="Red dot" />
                <br/>
                <br/>
            </td>
        </tr>
            <tr>
                <td class="text-center" style="color: rgba(113, 3, 138, 0.99)"><h5>Student's Profile</h5></td>
            </tr>
            <tr>
                <td> <b>Full Names :</b> @Model.FirstName @Model.MiddleName @Model.LastName</td>
                <td> <b>Country :</b> @Model.Nationality</td>

            </tr>

            <tr>

            </tr>
            <tr>
                <td>
                    <b>Gender :</b> @Model.Gender
                </td>
                <td> <b>Religion :</b> @Model.Religion</td>
            </tr>

            <tr>
                <td> <b>Home Address :</b> @Model.HomeAddress</td>
                <td> <b>Country of Residence:</b> @Model.CountryOfResidence</td>
            </tr>

            <tr>
                <td> <b>Country of Residence:</b> @Model.CountryOfResidence</td>
                <td> <b>City :</b> @Model.City</td>
            </tr>

            <tr>
                <td> <b>Date of Birth :</b> @Model.DateOfBirth</td>
